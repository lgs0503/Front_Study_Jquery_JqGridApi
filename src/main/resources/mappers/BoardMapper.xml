<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbs.mapper.BoardMapper">

	<resultMap type="com.bbs.vo.BoardVO" id="boardMap">
		<id property="bno" column="bno"></id>
		<result property="title" column="title"/>
		<result property="content" column="content"/>
		<result property="writer" column="writer"/>
		<result property="regDate" column="regDate"/>
	</resultMap>
	
	<select id="getBoardList" resultMap="boardMap" parameterType="BoardGridSearchVO">
		SELECT 	BNO,
				TITLE,
				CONTENT,
				WRITER,
				REGDATE
		FROM	(SELECT	ROWNUM AS NUM,
						BNO,
						TITLE,
						CONTENT,
						WRITER,
						TO_CHAR(REGDATE, 'YYYY-MM-DD') AS REGDATE
				 FROM	BOARD) A
		WHERE	NUM BETWEEN #{startRow} AND #{endRow}
		<if test="searchKey != null and searchKey != '' and searchKey == 'title' and keyword !='' and keyword != null ">
		AND		TITLE = #{keyword}
		</if>
		<if test="searchKey != null and searchKey != '' and searchKey == 'writer' and keyword !='' and keyword != null ">
		AND		WRITER = #{keyword}
		</if>
		ORDER BY ${sidx} ${sord}
	</select>

	<select id="getBoardCount" resultType="int">
		SELECT	COUNT(*) CNT
		FROM	BOARD
	</select>
</mapper>